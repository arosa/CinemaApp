@model AddTheaterViewModel
@{
}

<h1>Add New Theater</h1>
<form method="post" action="Add" class="mt-5">
  <div class="mb-3">
    <label for="" class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name">
  </div><div class="mb-3">
    <label for="" class="form-label">City</label>
    <input type="text" class="form-control" asp-for="City">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Ticket Price</label>
    <input type="double" class="form-control" asp-for="TicketPrice">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Opening Time</label>
    <input type="Time" class="form-control" asp-for="OpenHoursFrom">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Closing Time</label>
    <input type="Time" class="form-control" asp-for="OpenHoursTo">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>